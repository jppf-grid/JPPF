<project name="JPPF-samples" basedir="..">

  <import file="jppf-build-utils.xml"/>

  <property name="samples.pack.prefix" value="JPPF-${project.version}-samples-pack"/>
  <property name="samples.pack.file" value="${build}/${samples.pack.prefix}.zip"/>

  <!-- ========================================================================= -->
  <!--                         Generate the samples pack                         -->
  <!-- ========================================================================= -->

  <target name="samples.pack" depends="samples.html.readme,samples.generate.md,samples.zip,samples.php.doc,doc.home" />

  <target name="samples.zip" >
    <!-- Generate the samples pack zip file -->
    <delete file="samples.pack.file" quiet="true"/>
    <zip destfile="${samples.pack.file}">
      <zipfileset dir="${basedir}/../samples-pack" prefix="${samples.pack.prefix}">
        <exclude name="**/Readme.html"/>
        <exclude name="**/*.log"/>
        <exclude name="**/*.sh"/>
        <exclude name="**/.project"/>
        <exclude name="**/.classpath"/>
        <exclude name="**/.settings/"/>
        <exclude name="**/target/**"/>
      </zipfileset>
      <zipfileset dir="${build}/samples-pack" prefix="${samples.pack.prefix}" includes="**/Readme.html"/>
      <zipfileset dir="${samples-pack}" prefix="${samples.pack.prefix}" includes="**/*.sh" filemode="755"/>
      <zipfileset dir="${build}/samples-pack" prefix="${samples.pack.prefix}" includes="**/target/tohtml/**"/>
    </zip>
    <delete dir="${build}/samples-pack" quiet="true"/>
  </target>

  <!-- ========================================================================= -->
  <!-- Build the samples Readme.html files                                       -->
  <!-- ========================================================================= -->

  <target name="samples.html.readme" depends="">
    <delete dir="${build}/samples-pack" quiet="true"/>
    <mkdir dir="${build}/samples-pack"/>
    <doc.gen source="${samples-pack}" dest="${build}/samples-pack" templates="${home}/doc-source/templates-samples/"/>
  </target>

  <!-- ========================================================================= -->
  <!-- Convert Readme.html into Readme.md                                        -->
  <!-- ========================================================================= -->

  <target name="samples.generate.md">
    <sample.md samples="**"/>
  </target>

  <!-- ========================================================================= -->
  <!-- Ssamples generate readme.php files based on the correspondng Readme.html  -->
  <!-- in the samples sources.                                                   -->
  <!-- ========================================================================= -->

  <target name="samples.php.doc">
    <delete dir="${home}/samples-pack" quiet="true"/>
    <mkdir dir="${home}/samples-pack"/>
    <java fork="yes" classname="org.jppf.doc.SamplesPHPReadmeProcessor" classpathref="run.classpath">
      <jvmarg value="-Xmx128m" />
      <arg value="${samples-pack}"/>
      <arg value="${home}/doc-source/home/samples-pack"/>
      <arg value="${home}/doc-source/templates/sample-readme.html"/>
    </java>
    <copy file="${samples-pack}/index.php" toDir="${home}/doc-source/home/samples-pack"/>

    <!-- Clean up and add the samples pack sources to the proper web site folder -->
    <delete dir="${home}/samples-pack" quiet="true"/>
    <mkdir dir="${home}/samples-pack"/>
    <copy todir="${home}/samples-pack">
      <fileset dir="${samples-pack}">
        <exclude name="**/*.jar"/>
        <exclude name="**/src/**/*"/>
        <exclude name="**/.project"/>
        <exclude name="**/.classpath"/>
        <exclude name="**/.settings/"/>
        <exclude name="**/target/**"/>
        <exclude name="**/pom.xml/"/>
        <exclude name="**/Readme.*/"/>
        <exclude name="**/*.bat/"/>
        <exclude name="**/*.sh/"/>
      </fileset>
      <fileset dir="${samples-pack}">
        <include name="**/target/tohtml/**"/>
      </fileset>
    </copy>
  </target>

  <target name="doc.home">
    <doc.gen source="${home}/doc-source/home" dest="${home}/" templates="${home}/doc-source/templates/"/>
  </target>

</project> 
