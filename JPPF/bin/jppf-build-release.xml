<project name="jppf-release" basedir="..">

  <!-- ========================================================================= -->
  <!--                         Generate the release files                        -->
  <!-- ========================================================================= -->

  <target name="jppf.release">
    <echo message="copying release zip files" level="info" />
    <property name="dest.dir" value="${project.build.directory}/build"/>
    <delete dir="${dest.dir}" quiet="true"/>
    <mkdir dir="${dest.dir}"/>
    <macrodef name="copy.zip">
      <attribute name="module"/>
      <sequential>
        <copy todir="${dest.dir}">
          <fileset dir="../@{module}/target" includes="*.zip"/> 
        </copy>
      </sequential>
    </macrodef>
    <copy.zip module="application-template"/>
    <copy.zip module="server"/>
    <copy.zip module="node"/>
    <copy.zip module="admin"/>
    <copy.zip module="admin-web"/>
    <copy.zip module="jmxremote-nio"/>

    <echo message="building user guide zip file" level="info" />
    <copy file="${basedir}/docs/manual/JPPF-User-Guide.pdf" tofile="${dest.dir}/JPPF-${project.version}-User-Guide.pdf" quiet="true"/>
    <zip destfile="${dest.dir}/JPPF-${project.version}-User-Guide.zip">
      <zipfileset dir="${dest.dir}" includes="*.pdf"/>
    </zip>
    <delete file="${dest.dir}/JPPF-${project.version}-User-Guide.pdf" quiet="true"/>
  
    <echo message="building javadoc zip file" level="info" />
    <property name="javadoc.dest.dir" value="${basedir}/docs/home/javadoc/${jppf.base.version}"/>
    <move file="${basedir}/docs/home/javadoc/apidocs" tofile="${javadoc.dest.dir}" quiet="true" failonerror="false"/>
    <replace dir="${javadoc.dest.dir}">
      <include name="**/*.html"/>
      <replacefilter>
        <replacetoken><![CDATA[</head>]]></replacetoken>
        <replacevalue><![CDATA[<link rel="shortcut icon" href="https://www.jppf.org/images/jppf-icon.ico" type="image/x-icon"></head>]]></replacevalue>
      </replacefilter>
      <replacefilter token="@version@" value="${jppf.base.version}"/>
    </replace>
    <zip destfile="${dest.dir}/JPPF-${project.version}-api.zip">
      <zipfileset dir="${javadoc.dest.dir}" prefix="JPPF-${project.version}-api"/>
    </zip>
  </target>

</project> 
