<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.jppf.android" xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application android:allowBackup="true" android:icon="@mipmap/jppf_icon" android:label="@string/app_name" android:theme="@style/AppTheme">

    <activity android:name=".activities.MainActivity" android:label="@string/title_activity_main">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".activities.SettingsActivity" android:label="@string/title_activity_settings" android:parentActivityName=".activities.MainActivity">
      <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.jppf.android.activities.MainActivity"/>
    </activity>

  </application>

</manifest>
