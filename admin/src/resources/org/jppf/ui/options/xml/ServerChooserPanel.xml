<opt:main xmlns:opt="http://www.jppf.org/Options.xsd" name="ServerChooserPanel" type="page">
  <property name="tooltip" value="The list of drivers to connect to"/>
  <property name="layoutConstraints" value="flowy, fill, insets 2 2 2 2"/>
  <property name="componentConstraints" value="pushy 0, pushx, h 22!"/>

  <child name="ServerChooser" type="ComboBox">
    <property name="label" value="Server connection"/>
    <property name="tooltip" value="The list of drivers to connect to"/>
    <property name="value" value=""/>
    <initializer type="script">
      <script language="groovy">StatsHandler.getInstance().getClientHandler().setServerListOption(option)</script>
    </initializer>
    <listener type="script">
      <script language="groovy">StatsHandler.getInstance().getClientHandler().setCurrentConnection(option.getValue())</script>
    </listener>
  </child>

</opt:main>
