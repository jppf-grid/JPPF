<!--
  XML descriptor for the  topology tree view in the admin console.
-->
<opt:main xmlns:opt="http://www.jppf.org/Options.xsd" name="NodeDataPage" type="page" i18n="org.jppf.ui.i18n.NodeDataPage">
  <property name="layoutConstraints" value="flowx, flowy, fill, gap rel, insets 0"/>
  <property name="icon" value="/org/jppf/ui/resources/view-list-tree-4.png"/>
  <property name="scrollable" value="true"/>

	<!-- ===================================================================== -->
	<!--  Top toolbar                                                          -->
	<!-- ===================================================================== -->

	<child name="topology.toolbar" type="page">
    <property name="componentConstraints" value="gap rel"/>
		<property name="layoutConstraints" value="insets 4 2 0 2"/>

    <child name="shutdown.restart.driver" type="Button"/>
    <child name="load.balancing.settings" type="Button"/>
		<child name="driver.reset.statistics" type="Button"/>

		<child name="sep1" type="ToolbarSeparator"/>
		<child name="update.configuration" type="Button"/>
		<child name="show.information" type="Button"/>
    <child name="sep2" type="ToolbarSeparator"/>
		<child name="update.threads" type="Button"/>
		<child name="reset.counter" type="Button"/>
    <child name="sep3" type="ToolbarSeparator"/>
		<child name="restart.node" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/traffic_light_red_green.gif"/>
    </child>
    <child name="restart.node.deferred" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/traffic_light_red_green_yellow.gif"/>
    </child>
    <child name="sep3.1" type="ToolbarSeparator"/>
    <child name="shutdown.node" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/traffic_light_red.gif"/>
    </child>
    <child name="shutdown.node.deferred" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/traffic_light_red_yellow.gif"/>
    </child>
    <child name="sep3.2" type="ToolbarSeparator"/>
    <child name="reconnect.node" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/reconnect.png"/>
    </child>
    <child name="reconnect.node.deferred" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/reconnect-deferred.png"/>
    </child>
    <child name="sep3.3" type="ToolbarSeparator"/>
    <child name="cancel.deferred.action" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/cancel_deferred_action.gif"/>
    </child>
    <child name="sep4" type="ToolbarSeparator"/>
    <child name="toggle.active" type="Button"/>
    <child name="node.provisioning" type="Button"/>

	</child>

  <!-- ===================================================================== -->
  <!-- Bottom tool bar                                                       -->
  <!-- ===================================================================== -->

  <child name="topology.toolbar.bottom" type="page">
    <property name="componentConstraints" value="gap rel"/>
    <property name="layoutConstraints" value="insets 4 2 0 2"/>

    <child name="Auto" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/synch.gif"/>
      <property name="toggle" value="true"/>
      <initializer type="script">
        <script language="groovy">option.getUIComponent().setSelected(true)</script>
      </initializer>
      <listener type="script">
        <script language="groovy"><![CDATA[
          def b = option.getUIComponent().isSelected();
          def panel = option.findFirstWithName("/NodeTreeTable");
          panel.setAutoRefresh(b);
        ]]></script>
      </listener>
    </child>

    <child name="button.refresh" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/refresh.gif"/>
      <listener type="script">
        <script language="groovy">option.findFirstWithName("/NodeTreeTable").refreshTreeTableModel()</script>
      </listener>
    </child>
    
    <child name="sep5" type="ToolbarSeparator"/>
    <child name="button.expand" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/expand.gif"/>
      <listener type="script">
        <script language="groovy">option.findFirstWithName("/NodeTreeTable").getTreeTable().expandAll()</script>
      </listener>
    </child>

    <child name="button.collapse" type="Button">
      <property name="icon" value="/org/jppf/ui/resources/collapse.gif"/>
      <listener type="script">
        <script language="groovy">option.findFirstWithName("/NodeTreeTable").getTreeTable().collapseAll()</script>
      </listener>
    </child>

    <child name="sep6" type="ToolbarSeparator"/>
    <child name="select.drivers" type="Button"/>
    <child name="select.nodes" type="Button"/>

    <child name="sep7" type="ToolbarSeparator"/>
    <child name="node.show.hide" type="Button"/>

  </child>

	<!-- ===================================================================== -->
	<!--                      Tree table area                                  -->
	<!-- ===================================================================== -->

	<child name="treeTableContainer" type="page">
		<property name="layoutConstraints" value="fill, nogrid"/>
		<property name="componentConstraints" value="grow, span, push, width 0"/>
	
    <child name="NodeTreeTable" type="Custom">
      <property name="impl.class" value="org.jppf.ui.monitoring.node.NodeDataPanel"/>
			<property name="componentConstraints" value="grow, width 0"/>
			<property name="value" value=""/>
			<initializer type="script">
				<script language="groovy">
					option.setupTableColumns();
					option.setupActions();
          option.init();
				</script>
			</initializer>
			<finalizer type="script">
				<script language="groovy">option.saveTableColumnsSettings();</script>
			</finalizer>
		</child>

	</child>
	
</opt:main>
