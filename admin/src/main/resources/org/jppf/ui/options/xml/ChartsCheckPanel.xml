<opt:main xmlns:opt="http://www.jppf.org/Options.xsd" name="ChartsCheckPanel" type="page">
	<property name="layoutConstraints" value="flowy"/>
	<property name="componentConstraints" value=""/>

	<!-- ===================================================================== -->
	<!--                    Server Chooser Panel                               -->
	<!-- ===================================================================== -->
	
	<child name="msgText" type="TextArea">
		<property name="label" value="Download missing charting libraries?"/>
		<property name="value" value=""/>
		<property name="componentConstraints" value="grow, push"/>
	</child>

	<child name="askAgainPage" type="page">
		<property name="layoutConstraints" value="fill"/>
		<property name="componentConstraints" value=""/>

		<child name="dontAskAgain" type="Boolean">
			<property name="label" value="Do not ask again"/>
			<property name="value" value="true"/>
		</child>
	</child>

	<child name="threadButtons" type="page">
		<property name="layoutConstraints" value="fill"/>
		<property name="componentConstraints" value=""/>

		<child name="YesBtn" type="Button">
			<property name="label" value="Yes"/>
		</child>

		<child name="NoBtn" type="Button">
			<property name="label" value="No"/>
			<property name="componentConstraints" value="gap unrel"/>
		</child>

	</child>

</opt:main>
